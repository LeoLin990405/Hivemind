# Application
NODE_ENV=development
PORT=3000
HOST=localhost

# Database (PostgreSQL)
DATABASE_URL=postgresql://hivemind:hivemind_dev_password@localhost:5432/hivemind
POSTGRES_PASSWORD=hivemind_dev_password

# Redis
REDIS_URL=redis://localhost:6379

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=1h
REFRESH_TOKEN_EXPIRES_IN=7d

# API Keys (for AI providers)
GOOGLE_API_KEY=
ANTHROPIC_API_KEY=
OPENAI_API_KEY=

# pgAdmin (optional)
PGADMIN_EMAIL=admin@hivemind.local
PGADMIN_PASSWORD=admin

# CORS
CORS_ORIGIN=http://localhost:5173

# Logging
LOG_LEVEL=debug

# File Upload
MAX_FILE_SIZE=104857600
UPLOAD_DIR=./uploads

# MCP Servers
MCP_ENABLED=true

# Skills
SKILLS_DIR=./skills

# Cron
CRON_ENABLED=true

# WebSocket
USE_SOCKET_IO=true

# OAuth2 Authentication (optional)
# Google OAuth
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_CALLBACK_URL=http://localhost:8765/api/v1/auth/google/callback

# GitHub OAuth
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
GITHUB_CALLBACK_URL=http://localhost:8765/api/v1/auth/github/callback

# OAuth Frontend Redirect
FRONTEND_URL=http://localhost:3000

# Email/SMTP Configuration (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=
FROM_EMAIL=noreply@hivemind.com
FROM_NAME=HiveMind

# ============================================
# Frontend (Vite) Environment Variables
# ============================================
# These are prefixed with VITE_ and are loaded by Vite

# API Configuration
VITE_API_BASE_URL=http://localhost:8765
VITE_WS_BASE_URL=ws://localhost:8765

# Development Server (only used in development)
VITE_DEV_PORT=3000
VITE_DEV_HOST=localhost

# Feature Flags
VITE_ENABLE_DEVTOOLS=true
VITE_ENABLE_MOCK_DATA=false
VITE_ENABLE_DEBUG_LOGS=true

# Application
VITE_APP_NAME=HiveMind
VITE_APP_VERSION=1.11.1

# Authentication
VITE_TOKEN_STORAGE_KEY=hivemind_access_token
VITE_REFRESH_TOKEN_KEY=hivemind_refresh_token

# WebSocket
VITE_WS_RECONNECT_DELAY=1000
VITE_WS_MAX_RECONNECT_ATTEMPTS=10

# File Upload
VITE_MAX_FILE_SIZE=10485760
VITE_MAX_FILES_PER_UPLOAD=10
