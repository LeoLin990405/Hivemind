# Production Environment Variables
# These are loaded by Vite in production builds

# API Configuration
# In production, use relative URLs to support deployment on any domain
VITE_API_BASE_URL=/api
VITE_WS_BASE_URL=

# Feature Flags
VITE_ENABLE_DEVTOOLS=false
VITE_ENABLE_MOCK_DATA=false
VITE_ENABLE_DEBUG_LOGS=false

# Application
VITE_APP_NAME=HiveMind
VITE_APP_VERSION=1.11.1

# Authentication
VITE_TOKEN_STORAGE_KEY=hivemind_access_token
VITE_REFRESH_TOKEN_KEY=hivemind_refresh_token

# WebSocket
VITE_WS_RECONNECT_DELAY=1000
VITE_WS_MAX_RECONNECT_ATTEMPTS=10

# File Upload
VITE_MAX_FILE_SIZE=10485760
VITE_MAX_FILES_PER_UPLOAD=10
